{
  "name": "zk-trading-horizen",
  "version": "1.0.0",
  "description": "Zero-Knowledge Trading System for Horizen on Base",
  "scripts": {
    "build": "forge build",
    "test": "forge test -vvv",
    "test:gas": "forge test --gas-report",
    "test:coverage": "forge coverage",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url localhost --broadcast",
    "deploy:base": "forge script script/Deploy.s.sol --rpc-url base --broadcast --verify",
    "deploy:sepolia": "forge script script/Deploy.s.sol --rpc-url base_sepolia --broadcast --verify",
    "deploy:horizen": "forge script script/DeployHorizen.s.sol --rpc-url https://horizen-rpc-testnet.appchain.base.org --broadcast",
    "deploy:horizen:verify": "forge script script/DeployHorizen.s.sol --rpc-url https://horizen-rpc-testnet.appchain.base.org --broadcast --verify",
    "lint": "solhint src/**/*.sol",
    "format": "forge fmt",
    "slither": "slither src/",
    "circuits:compile": "./circuits/compile.sh",
    "circuits:setup": "node circuits/setup.js"
  },
  "devDependencies": {
    "solhint": "^4.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "dependencies": {
    "snarkjs": "^0.7.0",
    "circomlib": "^2.0.5"
  }
}